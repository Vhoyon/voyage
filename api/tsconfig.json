{
  "extends": "@v-ed/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    
    "declaration": false,
    
    "baseUrl": "./",
    "paths": {
      "$prisma-client": ["./prisma/_generated/.prisma/client"],
      "$prisma-graphql/*": ["./src/_generated/prisma-nestjs-graphql/*"],
      "$common/*": ["./src/@common/*"],
      "$/*": ["./src/*"],
    },
    
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    
    "outDir": "./dist",
    
    "useDefineForClassFields": true,
  },
  "include": [
    "src/**/*.ts",
    "gulpfile.ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
  ]
}
