{
	"extends": ["stylelint-config-standard", "stylelint-config-css-modules", "stylelint-config-html"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
			}
		],
		"indentation": ["tab", { "baseIndentLevel": 1 }],
		"declaration-block-trailing-semicolon": null,
		"no-descending-specificity": null,
		"rule-empty-line-before": ["always", { "ignore": ["inside-block"] }],
		"value-keyword-case": null,
		"selector-class-pattern": "^[a-z][a-z0-9_-]+$",
		"selector-id-pattern": "^[a-z][a-z0-9_-]+$"
	},
	"ignoreFiles": ["node_modules/**/*", "dist/**/*"]
}
