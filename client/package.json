{
  "name": "client",
  "version": "0.0.0",
  "description": "Web client using Svelte, Routify, Svelte-Materialify and WindiCSS for theming, with support of GraphQL through URQL.",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p gql:watch dev:no-gql",
    "dev:no-gql": "npm-run-all -p dev:routify dev:vite",
    "dev:routify": "routify",
    "dev:vite": "vite --host",
    "build": "npm-run-all -s build:routify build:vite",
    "build:routify": "routify -b",
    "build:vite": "vite build",
    "serve:vite": "vite preview",
    "validate": "npm-run-all validate:*",
    "validate:svelte": "svelte-check --diagnostic-sources \"js,svelte\"",
    "validate:ts": "tsc --noEmit",
    "preview": "vite preview --port 5004",
    "lint": "npm-run-all lint:*",
    "lint:src": "eslint \"src/**/*.{t,j}s\"",
    "lint:css": "stylelint \"**/*.{css,svelte,html}\"",
    "gql": "graphql-codegen -r dotenv/config --config codegen.yml dotenv_config_path=.env.local",
    "gql:watch": "graphql-codegen -r dotenv/config --config codegen.yml dotenv_config_path=.env.local --watch"
  },
  "dependencies": {
    "@urql/svelte": "1.3.3",
    "axios": "0.24.0",
    "graphql": "15.8.0",
    "graphql-ws": "5.5.5",
    "minimum-delayer": "0.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/typed-document-node": "2.2.2",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@mdi/js": "6.5.95",
    "@roxi/routify": "2.18.4",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.35",
    "@tsconfig/svelte": "3.0.0",
    "@v-ed/tsconfig": "0.1.2",
    "dotenv": "10.0.0",
    "postcss": "8.4.5",
    "postcss-html": "1.3.0",
    "sass": "1.45.2",
    "svelte": "3.44.3",
    "svelte-check": "2.2.11",
    "svelte-materialify": "0.3.11",
    "svelte-preprocess": "4.10.2",
    "svelte-windicss-preprocess": "4.2.5",
    "typescript": "4.5.5",
    "urql": "2.0.6",
    "vite": "2.7.13",
    "vite-plugin-html": "2.1.2",
    "vite-plugin-pwa": "0.11.12",
    "vite-plugin-windicss": "1.6.1",
    "vite-tsconfig-paths": "3.3.17",
    "windicss": "3.4.3"
  },
  "routify": {
    "routifyDir": ".routify"
  }
}
